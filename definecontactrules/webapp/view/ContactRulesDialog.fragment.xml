<core:FragmentDefinition xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:core="sap.ui.core" 
  xmlns:smartForm="sap.ui.comp.smartform" 
  xmlns:smartField="sap.ui.comp.smartfield">
  <Dialog title="{this>/title}" 
    contentWidth="700px" 
    afterClose="onAfterClose">
    <smartForm:SmartForm id="smartForm" 
      editable="true">
      <smartForm:layout>
        <core:Fragment type="XML" 
          fragmentName="com.sap.cd.maco.mmt.ui.reuse.fragment.form.SmartFormLayout"/>
      </smartForm:layout>
      <smartForm:Group>

        <smartForm:GroupElement >
         <smartForm:label>
            <Label required="true"
                   text="{/xMP4GxC_CTA_MP_UI/OwnMarketPartner/#@sap:label}"/>
          </smartForm:label>
        	<ComboBox showSecondaryValues= "true"
                          items="{path: '/xMP4GxC_MarketPartner_VH', sorter: { path: 'mp_name' } }" 
                          change="onOwnMarketPartnerChange"
                          selectedKey="{OwnMarketPartner}">
                    <core:ListItem key="{market_partner}" 
                    			        text="{parts: [{path: 'i18n>OWN_MKT_PARTNER_LBL'},
                                    			       {path: 'mp_name'},
                                                 {path: 'market_partner'},
                                                 {path: 'division_text'}],
                                         formatter: '.formatter.formatMessage'}"
                                  additionalText="{market_role}"/>
                  </ComboBox>
          <!--<smartField:SmartField value="{OwnMarketPartner}" />-->
        </smartForm:GroupElement>

        <smartForm:GroupElement >
          <smartField:SmartField value="{ExternalMarketPartner}" />
        </smartForm:GroupElement>

        <smartForm:GroupElement>
          <smartField:SmartField value="{TechnicalMsgID}" />
        </smartForm:GroupElement>

        <smartForm:GroupElement>
          <smartField:SmartField value="{ExtBusinessMessageID}" />
        </smartForm:GroupElement>

        <!--<smartForm:GroupElement>-->
        <!--  <smartForm:label>-->
        <!--    <Label required="true"-->
        <!--           text="{/Partners/ContactID/#@sap:label}"/>-->
        <!--  </smartForm:label>-->
        <!--  <Select selectedKey='{Division}'-->
        <!--          items="{valueHelp>/divisions}">-->
        <!--    <items>-->
        <!--      <core:Item key="{valueHelp>id}"-->
        <!--                 text="{valueHelp>text}" />-->
        <!--    </items>-->
        <!--  </Select>-->
        <!--</smartForm:GroupElement>-->

        <smartForm:GroupElement>
          <smartField:SmartField value="{ContactID}" />
        </smartForm:GroupElement>

      </smartForm:Group>
      
    </smartForm:SmartForm>
    
    <buttons>
      <Button text="{this>/saveButtonText}" 
        press="onSubmit" 
        type="Emphasized"/>
      <Button text="{this>/cancelButtonText}" 
        press="onCancel"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>