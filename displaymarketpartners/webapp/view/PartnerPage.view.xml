<mvc:View controllerName="com.sap.cd.maco.selfservice.ui.app.displaymarketpartners.view.PartnerPage" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:c="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:core="sap.ui.core"
	xmlns:uxap="sap.uxap" xmlns:button="com.sap.cd.maco.mmt.ui.reuse.button" xmlns:layout="sap.ui.layout"
	xmlns:reuseObjectPageFacet="com.sap.cd.maco.mmt.ui.reuse.control.facet">
	<uxap:ObjectPageLayout id="objectPage" upperCaseAnchorBar="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<Title text="{Name}" wrapping="true" class="sapUiTinyMarginTop"/>
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<Title text="{Name}" wrapping="true" class="sapUiTinyMarginTop"/>
				</uxap:snappedHeading>
				<uxap:expandedContent>
					<Text
						text="{PartnerId}"/>
				</uxap:expandedContent>
				<uxap:snappedContent>
					<Text
						text="{PartnerId}"/>
				</uxap:snappedContent>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>
		<uxap:headerContent>
			<reuseObjectPageFacet:FormFacet>
				<reuseObjectPageFacet:FormFacetField label="{/xMP4GxCE_PARTNERS/MarketRole/#@sap:label}" text="{ path: 'Division', formatter: '.valueHelpFormatter.marketRole' }"/>
				<reuseObjectPageFacet:FormFacetField label="{/xMP4GxCE_PARTNERS/Division/#@sap:label}" text="{ path: 'Division', formatter: '.valueHelpFormatter.division' }"/>
				
			</reuseObjectPageFacet:FormFacet>
			<reuseObjectPageFacet:FormFacet>
				<reuseObjectPageFacet:FormFacetField label="{/xMP4GxCE_PARTNERS/EmailContact/#@sap:label}" text="{ path: 'EmailContact' }"/>
				<reuseObjectPageFacet:FormFacetStatus text="{= !!${EmailCertValidTo} ? ${path: 'EmailCertValidTo',
																			type: 'sap.ui.model.type.DateTime', 
																			formatOptions: { style: 'medium' }} : ${i18n>NOT_MAINTAINED_TEXT}}"
										 state="{= ${CertValidityCriticality} === 3 ? 'Indication04' : 
																				${CertValidityCriticality} === 1 ? 'Indication01' : 
																													${CertValidityCriticality} === 2 ? 'Indication03' :
																																						'None'}"
									    inverted="{= ${CertValidityCriticality} === 1}"/>
			</reuseObjectPageFacet:FormFacet>
		</uxap:headerContent>
		<uxap:sections>
			<uxap:ObjectPageSection title="{i18n>EMAIL_ADDRESS_SECTION_LBL}" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<mvc:XMLView id="idEmailView" viewName="com.sap.cd.maco.selfservice.ui.app.displaymarketpartners.view.EMailTable"/>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="{i18n>CERTIFICATE_SECTION_LBL}" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<mvc:XMLView id="idCertificateView" viewName="com.sap.cd.maco.selfservice.ui.app.displaymarketpartners.view.CertificatesTable"/>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="{i18n>AS2_ADDRESS_SECTION_LBL}" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<mvc:XMLView id="idAS2View" viewName="com.sap.cd.maco.selfservice.ui.app.displaymarketpartners.view.AS2Table"/>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>