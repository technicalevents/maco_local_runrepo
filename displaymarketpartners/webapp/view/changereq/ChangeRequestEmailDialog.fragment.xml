<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns:smartForm="sap.ui.comp.smartform" 
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog title="{this>/title}" 
			contentWidth="25%" 
			afterClose="onAfterClose"
			titleAlignment="Center">
		<smartForm:SmartForm editable="true">
			<smartForm:layout>
				<core:Fragment type="XML" 
							   fragmentName="com.sap.cd.maco.mmt.ui.reuse.fragment.form.SmartFormLayout"/>
			</smartForm:layout>
			<smartForm:Group>
				<smartForm:GroupElement>
					<smartField:SmartField value="{EmailAddress}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartForm:label>
						<Label text="{/xMP4GxC_ChangeRequest/ValidFrom/#@sap:label}"/>
					</smartForm:label>
					<DateTimePicker value="{path:'ValidFrom',type:'sap.ui.model.type.DateTime',formatOptions:{style:'medium'}}" 
								maxDate="{ValidTo}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartForm:label>
						<Label text="{/xMP4GxC_ChangeRequest/ValidTo/#@sap:label}"/>
					</smartForm:label>
					<DateTimePicker value="{path:'ValidTo',type:'sap.ui.model.type.DateTime',formatOptions:{style:'medium'}}" 
								minDate="{ValidFrom}"/>
				</smartForm:GroupElement>
			</smartForm:Group>
		</smartForm:SmartForm>
		<buttons>
			<Button text="{i18n>CREATE_TXT}" 
					press="onSubmit" 
					type="Emphasized"/>
			<Button text="{this>/cancelButtonText}" 
					press="onCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>