<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:layout="sap.ui.layout">
    <Popover
            showHeader="false"
            placement="Top"
            afterClose="_onAfterClose"
            class="sapUiContentPadding">
        <layout:VerticalLayout>
            <layout:content>
                <Label id="label"/>
                <Button id="button" width="100%" press="_onConfirm"/>
            </layout:content>
        </layout:VerticalLayout>
    </Popover>
</core:FragmentDefinition>

