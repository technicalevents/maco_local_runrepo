<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Select selectedKey="{$this>selectedKey}" change="onChange">
        <core:Item key="all" text="{i18n-reuse>draftStatusFilterAll}"/>
        <core:Item key="own" text="{i18n-reuse>draftStatusFilterOwn}"/>
        <core:Item key="locked" text="{i18n-reuse>draftStatusFilterLocked}"/>
        <core:Item key="unsaved" text="{i18n-reuse>draftStatusFilterUnsaved}"/>
        <core:Item key="unchanged" text="{i18n-reuse>draftStatusFilterUnchanged}"/>
    </Select>
</core:FragmentDefinition>