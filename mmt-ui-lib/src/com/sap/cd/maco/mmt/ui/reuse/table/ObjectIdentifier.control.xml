<core:FragmentDefinition
        xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <layout:VerticalLayout class="comSapCdMacoMmtUiReuseObjId">
        <Text
            text="{$this>title}"
            class="comSapCdMacoMmtUiReuseObjIdTitle"
            visible="{
            path: '$this>title',
                formatter: '._visible'
            }" />
        <Text
            text="{$this>text}"
            visible="{
                path: '$this>text',
                formatter: '._visible'
            }" />
        <FormattedText
            htmlText="{
                path: '$this>text',
                formatter: '._unknownText'
            }"
            visible="{
                parts: [
                    { path: '$this>title' },
                    { path: '$this>text' }
                ],
                formatter: '._unknownVisible'
            }" />
    </layout:VerticalLayout>
</core:FragmentDefinition>